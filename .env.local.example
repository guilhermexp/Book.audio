# Book.audio Environment Configuration
# Copy this file to .env.local and configure your settings

# Required: Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
VITE_API_URL=http://localhost:8010
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# Gemini AI Configuration
VITE_GEMINI_MODEL=gemini-1.5-flash
VITE_GEMINI_MAX_TOKENS=8192
VITE_GEMINI_TEMPERATURE=0.7

# Text-to-Speech Configuration
VITE_TTS_DEFAULT_VOICE=pt-BR-FranciscaNeural
VITE_TTS_DEFAULT_SPEED=1.0
VITE_TTS_DEFAULT_LANGUAGE=pt-BR
VITE_TTS_CACHE_SIZE=50
VITE_TTS_CACHE_TTL=3600000

# PDF Processing Configuration
VITE_PDF_MAX_FILE_SIZE=104857600
VITE_PDF_MAX_PAGES=1000
VITE_PDF_BACKEND_PROCESSING=true
VITE_PDF_IMAGE_QUALITY=0.8

# Cache Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_MAX_SIZE=52428800
VITE_CACHE_TTL=3600000
VITE_CACHE_STRATEGY=lru

# Feature Flags
VITE_FEATURE_AI=true
VITE_FEATURE_TTS=true
VITE_FEATURE_MINDMAP=true
VITE_FEATURE_WEB_SEARCH=true
VITE_FEATURE_OFFLINE=false

# Performance Configuration
VITE_LAZY_LOAD_THRESHOLD=3
VITE_PRELOAD_PAGES=2
VITE_DEBOUNCE_DELAY=300
VITE_THROTTLE_DELAY=100